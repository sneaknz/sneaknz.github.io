---
layout: site.html
---
<section class="post">
	<div class="post-content">
		<h2 class="title"><a href="{{ page.url }}">{{ title }}</a></h2>
		<div class="post-text">
			{{ content | safe }}
		</div>
	</div>
	<section class="metadata">
		<a href="{{ page.url }}" class="meta-item post-date">#</a>
		{%- for tag in tags | filterTagList %}
			{%- set tagUrl %}/tagged/{{ tag | slugify }}/{% endset %}
			<a href="{{ tagUrl }}" class="tag">{{ tag }}</a>
		{%- endfor %}
		<a href="https://github.com/sneaknz/sneaknz.github.io/blob/main/{{ page.inputPath }}">~</a>
	</section>
</section>